<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/high_contrast_background">

    <!-- Welcome Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="32dp"
        android:background="@drawable/success_message_background"
        android:padding="20dp">

        <TextView
            android:id="@+id/tvWelcome"
            style="@style/ElderlyFriendlyTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="欢迎使用药物提醒助手！"
            android:textSize="22sp"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:contentDescription="欢迎信息" />

        <TextView
            android:id="@+id/tvUserInfo"
            style="@style/ElderlyFriendlyText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="您的健康管理伙伴"
            android:gravity="center"
            android:textColor="@color/high_contrast_text_secondary"
            android:contentDescription="用户信息" />

    </LinearLayout>

    <!-- Main Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- View Medication List Button -->
        <Button
            android:id="@+id/btnViewMedicationList"
            style="@style/ElderlyFriendlyButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/medication_list_title"
            android:textSize="20sp"
            android:padding="20dp"
            android:layout_marginBottom="12dp"
            android:drawableStart="@drawable/ic_medication_default"
            android:drawablePadding="12dp"
            android:contentDescription="查看药物列表" />

        <!-- Add Medication Button -->
        <Button
            android:id="@+id/btnAddMedication"
            style="@style/ElderlyFriendlyButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_medication_title"
            android:textSize="20sp"
            android:padding="20dp"
            android:layout_marginBottom="12dp"
            android:drawableStart="@drawable/ic_add_medication"
            android:drawablePadding="12dp"
            android:contentDescription="@string/add_medication_description" />

        <!-- Health Diary Button -->
        <Button
            android:id="@+id/btnHealthDiary"
            style="@style/ElderlyFriendlyButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/health_diary_title"
            android:textSize="20sp"
            android:padding="20dp"
            android:layout_marginBottom="12dp"
            android:drawableStart="@drawable/ic_medication_default"
            android:drawablePadding="12dp"
            android:contentDescription="查看和管理健康日记" />

        <!-- Intake Record Button -->
        <Button
            android:id="@+id/btnIntakeRecord"
            style="@style/ElderlyFriendlyButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/intake_record_button"
            android:textSize="20sp"
            android:padding="20dp"
            android:layout_marginBottom="12dp"
            android:drawableStart="@drawable/ic_medication_default"
            android:drawablePadding="12dp"
            android:contentDescription="@string/intake_record_button_description" />

        <!-- Profile Button -->
        <Button
            android:id="@+id/btnProfile"
            style="@style/ElderlyFriendlyButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="个人资料"
            android:textSize="20sp"
            android:padding="20dp"
            android:drawableStart="@drawable/ic_arrow_forward"
            android:drawablePadding="12dp"
            android:contentDescription="查看和编辑个人资料" />

    </LinearLayout>

</LinearLayout>