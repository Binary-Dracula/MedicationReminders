<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/high_contrast_background">

    <!-- Welcome Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="32dp"
        android:background="@drawable/success_message_background"
        android:padding="20dp">

        <TextView
            android:id="@+id/tvWelcome"
            style="@style/ElderlyFriendlyTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="欢迎使用药物提醒助手！"
            android:textSize="22sp"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:contentDescription="欢迎信息" />

        <TextView
            android:id="@+id/tvUserInfo"
            style="@style/ElderlyFriendlyText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="您的健康管理伙伴"
            android:gravity="center"
            android:textColor="@color/high_contrast_text_secondary"
            android:contentDescription="用户信息" />

    </LinearLayout>

    <!-- Main Content Area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Placeholder for future medication features -->
            <TextView
                style="@style/ElderlyFriendlyTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="功能开发中..."
                android:gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                android:textColor="@color/high_contrast_text_secondary" />

            <TextView
                style="@style/ElderlyFriendlyText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="药物提醒、健康记录、用药管理等功能正在开发中，敬请期待！"
                android:gravity="center"
                android:layout_marginBottom="40dp"
                android:textColor="@color/high_contrast_text_secondary" />

            <!-- Feature Cards Placeholder -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Medication Reminder Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            style="@style/ElderlyFriendlyTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="💊 药物提醒"
                            android:textSize="20sp"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            style="@style/ElderlyFriendlyText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="设置用药时间，准时提醒您服药"
                            android:textColor="@color/high_contrast_text_secondary" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Health Record Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            style="@style/ElderlyFriendlyTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="📋 健康记录"
                            android:textSize="20sp"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            style="@style/ElderlyFriendlyText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="记录用药情况和身体状况"
                            android:textColor="@color/high_contrast_text_secondary" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Emergency Contact Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            style="@style/ElderlyFriendlyTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="🚨 紧急联系"
                            android:textSize="20sp"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            style="@style/ElderlyFriendlyText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="管理医生和家人联系方式"
                            android:textColor="@color/high_contrast_text_secondary" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>