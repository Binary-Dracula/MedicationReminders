<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/high_contrast_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Medication Photo -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <ImageView
                android:id="@+id/ivMedicationPhoto"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:background="@drawable/photo_placeholder_background"
                android:src="@drawable/ic_medication_default"
                android:contentDescription="@string/medication_detail_photo_content_description" />

        </androidx.cardview.widget.CardView>

        <!-- Medication Information Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Medication Name -->
                <TextView
                    android:id="@+id/tvMedicationName"
                    style="@style/ElderlyFriendlyTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/medication_name_label"
                    android:textSize="24sp"
                    android:layout_marginBottom="16dp"
                    android:gravity="center" />

                <!-- Color Information -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        style="@style/ElderlyFriendlyText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/medication_color_display_label"
                        android:textSize="18sp"
                        android:textColor="@color/high_contrast_text_secondary" />

                    <TextView
                        android:id="@+id/tvMedicationColor"
                        style="@style/ElderlyFriendlyText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/color_white"
                        android:textSize="18sp" />

                </LinearLayout>

                <!-- Dosage Form Information -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        style="@style/ElderlyFriendlyText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/medication_dosage_form_display_label"
                        android:textSize="18sp"
                        android:textColor="@color/high_contrast_text_secondary" />

                    <TextView
                        android:id="@+id/tvMedicationDosageForm"
                        style="@style/ElderlyFriendlyText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/dosage_form_tablet"
                        android:textSize="18sp" />

                </LinearLayout>

                <!-- Stock Information -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        style="@style/ElderlyFriendlyText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/medication_stock_label"
                        android:textSize="18sp"
                        android:textColor="@color/high_contrast_text_secondary" />

                    <TextView
                        android:id="@+id/tvStockInfo"
                        style="@style/ElderlyFriendlyText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/medication_sample_stock_info"
                        android:textSize="18sp" />

                </LinearLayout>

                <!-- Dosage Per Intake Information -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        style="@style/ElderlyFriendlyText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/dosage_per_intake_label"
                        android:textSize="18sp"
                        android:textColor="@color/high_contrast_text_secondary" />

                    <TextView
                        android:id="@+id/tvDosagePerIntake"
                        style="@style/ElderlyFriendlyText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/medication_sample_dosage_per_intake"
                        android:textSize="18sp" />

                </LinearLayout>

                <!-- Low Stock Threshold Information -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        style="@style/ElderlyFriendlyText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/low_stock_threshold_label"
                        android:textSize="18sp"
                        android:textColor="@color/high_contrast_text_secondary" />

                    <TextView
                        android:id="@+id/tvLowStockThreshold"
                        style="@style/ElderlyFriendlyText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/medication_sample_low_stock_threshold"
                        android:textSize="18sp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Inventory Status Warning Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardInventoryWarning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@drawable/error_message_background">

                <TextView
                    android:id="@+id/tvInventoryWarningTitle"
                    style="@style/ElderlyFriendlyTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/inventory_warning_title"
                    android:textSize="20sp"
                    android:textColor="@color/error_color"
                    android:layout_marginBottom="8dp"
                    android:drawableStart="@drawable/ic_delete"
                    android:drawablePadding="8dp" />

                <TextView
                    android:id="@+id/tvInventoryWarningMessage"
                    style="@style/ElderlyFriendlyText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                                            android:text="@string/medication_stock_warning_message"
                    android:textSize="16sp"
                    android:textColor="@color/error_color"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btnReplenishStock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/replenish_stock"
                    android:textSize="16sp"
                    android:layout_gravity="end"
                    android:backgroundTint="@color/error_color" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Date Information Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    style="@style/ElderlyFriendlyTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                                            android:text="@string/medication_time_info_label"
                    android:textSize="20sp"
                    android:layout_marginBottom="12dp" />

                <!-- Created Date -->
                <TextView
                    android:id="@+id/tvCreatedDate"
                    style="@style/ElderlyFriendlyText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                                            android:text="@string/medication_sample_created_time"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/high_contrast_text_secondary" />

                <!-- Updated Date -->
                <TextView
                    android:id="@+id/tvUpdatedDate"
                    style="@style/ElderlyFriendlyText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                                            android:text="@string/medication_sample_updated_time"
                    android:textSize="16sp"
                    android:textColor="@color/high_contrast_text_secondary" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btnEditMedication"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/edit" />

            <View
                android:layout_width="12dp"
                android:layout_height="1dp" />

            <Button
                android:id="@+id/btnOpenSchedule"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/set_reminder" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>