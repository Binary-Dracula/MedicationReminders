<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/high_contrast_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Medication Photo -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <ImageView
                android:id="@+id/ivMedicationPhoto"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:background="@drawable/photo_placeholder_background"
                android:src="@drawable/ic_medication_default"
                android:contentDescription="药物照片" />

        </androidx.cardview.widget.CardView>

        <!-- Medication Information Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Medication Name -->
                <TextView
                    android:id="@+id/tvMedicationName"
                    style="@style/ElderlyFriendlyTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="药物名称"
                    android:textSize="24sp"
                    android:layout_marginBottom="16dp"
                    android:gravity="center" />

                <!-- Color Information -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        style="@style/ElderlyFriendlyText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="药物颜色："
                        android:textSize="18sp"
                        android:textColor="@color/high_contrast_text_secondary" />

                    <TextView
                        android:id="@+id/tvMedicationColor"
                        style="@style/ElderlyFriendlyText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="白色"
                        android:textSize="18sp" />

                </LinearLayout>

                <!-- Dosage Form Information -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        style="@style/ElderlyFriendlyText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="药物剂型："
                        android:textSize="18sp"
                        android:textColor="@color/high_contrast_text_secondary" />

                    <TextView
                        android:id="@+id/tvMedicationDosageForm"
                        style="@style/ElderlyFriendlyText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="片剂"
                        android:textSize="18sp" />

                </LinearLayout>

                <!-- Stock Information -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        style="@style/ElderlyFriendlyText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="库存："
                        android:textSize="18sp"
                        android:textColor="@color/high_contrast_text_secondary" />

                    <TextView
                        android:id="@+id/tvStockInfo"
                        style="@style/ElderlyFriendlyText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="0/0 片（0%）"
                        android:textSize="18sp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Date Information Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    style="@style/ElderlyFriendlyTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="时间信息"
                    android:textSize="20sp"
                    android:layout_marginBottom="12dp" />

                <!-- Created Date -->
                <TextView
                    android:id="@+id/tvCreatedDate"
                    style="@style/ElderlyFriendlyText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="添加时间：2024年01月01日 12:00"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/high_contrast_text_secondary" />

                <!-- Updated Date -->
                <TextView
                    android:id="@+id/tvUpdatedDate"
                    style="@style/ElderlyFriendlyText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="更新时间：2024年01月01日 12:00"
                    android:textSize="16sp"
                    android:textColor="@color/high_contrast_text_secondary" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>