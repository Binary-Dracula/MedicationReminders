<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/high_contrast_background">

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Medication List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewMedications"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="vertical"
            android:contentDescription="@string/medication_list_content_description" />

        <!-- Empty State Message -->
        <LinearLayout
            android:id="@+id/tvEmptyMessage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">

            <ImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/ic_medication_default"
                android:layout_marginBottom="16dp"
                android:contentDescription="@string/medication_empty_icon_content_description" />

            <TextView
                style="@style/ElderlyFriendlyTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_medications_message"
                android:textSize="20sp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/high_contrast_text_secondary" />

            <TextView
                style="@style/ElderlyFriendlyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/medication_list_first_medication_hint"
                android:textColor="@color/high_contrast_text_secondary"
                android:gravity="center" />

        </LinearLayout>

    </LinearLayout>

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddMedication"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        android:src="@drawable/ic_add_medication"
        android:contentDescription="@string/add_medication_description"
        app:tint="@android:color/white" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>