<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/high_contrast_background">

    <!-- 主要内容区域 - 使用LinearLayout包装以保持原有的垂直布局 -->
    <LinearLayout
        android:id="@+id/llMainContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:paddingHorizontal="24dp">

        <!-- 标题 TextView -->
        <TextView
            android:id="@+id/tvTitle"
            style="@style/ElderlyFriendlyTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:gravity="center"
            android:text="@string/register_page_title"
            android:textSize="24sp" />

        <!-- 用户名输入 -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilUsername"
            style="@style/ElderlyFriendlyTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:hint="@string/register_username_hint"
            app:helperText="@string/register_username_helper"
            app:helperTextTextAppearance="@style/ElderlyFriendlyText">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etUsername"
                style="@style/ElderlyFriendlyEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/register_username_content_description"
                android:inputType="text"
                android:maxLength="20" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- 手机号输入 -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilPhone"
            style="@style/ElderlyFriendlyTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:hint="@string/register_phone_hint"
            app:helperText="@string/register_phone_helper"
            app:helperTextTextAppearance="@style/ElderlyFriendlyText">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPhone"
                style="@style/ElderlyFriendlyEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/register_phone_content_description"
                android:inputType="phone"
                android:maxLength="11" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- 邮箱输入 -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilEmail"
            style="@style/ElderlyFriendlyTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:hint="@string/register_email_hint"
            app:helperText="@string/register_email_helper"
            app:helperTextTextAppearance="@style/ElderlyFriendlyText">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEmail"
                style="@style/ElderlyFriendlyEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/register_email_content_description"
                android:inputType="textEmailAddress" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- 密码输入 -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilPassword"
            style="@style/ElderlyFriendlyTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            android:hint="@string/register_password_hint"
            app:helperText="@string/register_password_helper"
            app:helperTextTextAppearance="@style/ElderlyFriendlyText"
            app:passwordToggleContentDescription="@string/register_password_toggle_description"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPassword"
                style="@style/ElderlyFriendlyEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/register_password_content_description"
                android:inputType="textPassword"
                android:maxLength="20" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- 注册按钮 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRegister"
            style="@style/ElderlyFriendlyButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:contentDescription="@string/register_button_content_description"
            android:minHeight="56dp"
            android:text="@string/register_button_text" />

        <!-- 登录链接 -->
        <TextView
            android:id="@+id/tvLoginLink"
            style="@style/ElderlyFriendlyText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="@string/register_login_link_content_description"
            android:gravity="center"
            android:minHeight="48dp"
            android:padding="12dp"
            android:text="@string/register_login_link_text"
            android:textColor="@color/high_contrast_primary"
            android:textSize="18sp" />

    </LinearLayout>

    <!-- 消息提示 TextView - 固定在底部位置 -->
    <TextView
        android:id="@+id/tvMessage"
        style="@style/ElderlyFriendlyText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/message_background"
        android:gravity="center"
        android:padding="12dp"
        android:visibility="gone" />

    <!-- 全屏Loading遮罩 -->
    <RelativeLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="-24dp"
        android:layout_marginTop="-24dp"
        android:layout_marginRight="-24dp"
        android:layout_marginBottom="-24dp"
        android:background="#80000000"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/loading_background"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="32dp">

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginBottom="16dp"
                android:contentDescription="@string/register_loading_content_description" />

            <TextView
                android:id="@+id/tvLoadingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/register_loading_text"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>