<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginBottom="@dimen/elderly_margin_medium"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/high_contrast_surface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/min_touch_target"
        android:orientation="vertical"
        android:padding="@dimen/elderly_margin_medium">

        <!-- 日记内容预览 -->
        <TextView
            android:id="@+id/tvDiaryContent"
            style="@style/ElderlyFriendlyText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/elderly_margin_small"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="@string/diary_empty_content"
            android:textSize="@dimen/elderly_text_medium"
            android:lineSpacingExtra="4dp"
            android:contentDescription="@string/diary_content_preview" />

        <!-- 分隔线 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="@dimen/elderly_margin_small"
            android:background="@color/high_contrast_text_secondary"
            android:alpha="0.2" />

        <!-- 底部信息区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- 时间信息 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- 创建时间 -->
                <TextView
                    android:id="@+id/tvCreatedAt"
                    style="@style/ElderlyFriendlyText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="记录于 2024年01月01日"
                    android:textColor="@color/high_contrast_text_secondary"
                    android:textSize="@dimen/elderly_text_small"
                    android:drawablePadding="4dp"
                    app:drawableStartCompat="@drawable/ic_medication_default"
                    app:drawableTint="@color/high_contrast_text_secondary" />

                <!-- 更新时间（如果有修改） -->
                <TextView
                    android:id="@+id/tvUpdatedAt"
                    style="@style/ElderlyFriendlyText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="更新于 2024年01月02日"
                    android:textColor="@color/high_contrast_text_secondary"
                    android:textSize="14sp"
                    android:visibility="gone"
                    android:drawablePadding="4dp"
                    app:drawableStartCompat="@drawable/ic_medication_default"
                    app:drawableTint="@color/high_contrast_text_secondary" />

            </LinearLayout>

            <!-- 查看详情箭头 -->
            <ImageView
                android:layout_width="@dimen/min_touch_target"
                android:layout_height="@dimen/min_touch_target"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/view_diary_details"
                android:src="@drawable/ic_arrow_forward"
                android:padding="12dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                app:tint="@color/high_contrast_primary" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>